<!-- DataTales Example -->
<div
  class="tab-pane fade show active"
  id="show-feature"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/feature"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="exampleInputEmail1">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                aria-describedby="emailHelp"
                required
              />
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">QTY</label>
              <input
                type="number"
                class="form-control"
                name="qty"
                aria-describedby="emailHelp"
                required
              />
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Image</label>
              <input
                type="file"
                class="form-control"
                name="image"
                aria-describedby="emailHelp"
                required
              />
            </div>
            <input type="hidden" value="<%= itemId  %>" name="itemId" />

            <button type="Submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Qty</th>
                  <th>Image Url</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% features.forEach((feature,i) => { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= feature.name %></td>
                  <td><%= feature.qty %></td>
                  <td>
                    <img
                      src="http://just-staycation.herokuapp.com/<%= feature.imageUrl%>"
                      alt="imageUrl"
                      width="70px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%= itemId %>/feature/<%= feature.id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void()"
                        class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= feature.id %>"
                        data-name="<%= feature.name %>"
                        data-qty="<%= feature.qty %>"
                        ><i class="fas fa-edit"></i
                      ></a>
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
