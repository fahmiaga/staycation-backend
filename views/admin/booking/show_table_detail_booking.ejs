<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-primary">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="https://just-staycation.herokuapp.com/<%= bookings.payments.proofPayment %>"
          alt="images"
          style="width: 100%; display: block"
        />
        <div class="row ml-2">
          <% if (bookings.payments.status == 'Proses') { %>
          <form
            action="/admin/booking/<%= bookings.id %>/confirmation?_method=PUT"
            method="POST"
          >
            <button type="submit" class="btn btn-success">
              <i class="fas fa-check"></i>
              Confirm
            </button>
          </form>
          <form
            action="/admin/booking/<%= bookings.id %>/reject?_method=PUT"
            method="POST"
            class="ml-2"
          >
            <button type="submit" class="btn btn-danger">
              <i class="fas fa-times"></i>
              Reject
            </button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Member Name</th>
                <th>Total</th>
                <th>Bank</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= bookings.memberId.firstName %> <%=
                  bookings.memberId.lastName %>
                </td>
                <td>$ <%= bookings.total %></td>
                <td><%= bookings.payments.bankFrom %></td>
                <td><%= bookings.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
